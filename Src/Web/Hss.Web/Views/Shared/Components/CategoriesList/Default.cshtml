@model Hss.Web.ViewModels.Categories.CategoriesListViewModel

<div class="row">
    @foreach (var category in Model.Categories)
    {
        <div class="col-md-3">
            <a class="card" asp-route-id="@category.Id" asp-area="Administration" asp-controller="Categories" asp-action="Details">
                <img class="card-img-top" src="@category.ImageUrl" alt="@category.Name image" style="width:100%">
                <div class="card-body">
                    <h5 class="card-title">@category.Name</h5>
                </div>
            </a>
        </div>
    }
</div>