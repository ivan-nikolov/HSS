@model Hss.Web.ViewModels.Administration.Services.DeleteServiceViewModel

@{
    ViewData["Title"] = "Delete";
}

<h3>Are you sure you want to delete this service?</h3>
<div>
    <hr />
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input disabled="disabled" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="CategoryName" class="control-label"></label>
        <input disabled="disabled" asp-for="CategoryName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="SanitizedDescription" class="control-label">Description</label>
        <p>@Html.Raw(Model.SanitizedDescription)</p>
    </div>
    <div class="form-group">
        <label asp-for="Price" class="control-label"></label>
        <input disabled="disabled" asp-for="Price" class="form-control" />
    </div>
    <img href="@Model.ImageUrl"/>
    <hr />
    <form asp-action="Delete" method="post">
        <div class="d-flex justify-content-between">
            <div>
                <input type="submit" value="Delete" class="btn btn-danger" />
            </div>
            <div>
                <a class="btn btn-info" asp-action="All">Back to List</a>
            </div>
        </div>
    </form>
</div>
