@model Hss.Web.ViewModels.Administration.Services.CreateServiceInputModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create Service</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-area="Administration" asp-controller="Services" asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input type="number" step=".01" min="0.00" asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="parentCategory">Category</label>
                <component type="typeof(SelectCategoryComponent)" render-mode="ServerPrerendered" />
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <dl>
                    <dt>
                        <label asp-for="Image"></label>
                    </dt>
                    <dd>
                        <input class="form-control-file" asp-for="Image" type="file">
                    </dd>
                </dl>
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="d-flex justify-content-between">
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
                <div>
                    <a class="btn btn-info" asp-action="Index">Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
