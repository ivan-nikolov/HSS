@model Hss.Web.ViewModels.Administration.Categories.CreateCategoryInputModel

@{
    ViewData["Title"] = "Create";
}

<script src="/lib/tinymce/tinymce.min.js" type="text/javascript"></script>
<script type="text/javascript">
    tinymce.init({
        selector: "textarea",
        plugins: [
            "image paste table link code media"
        ]
    });
</script>

<h1>Create Service Category</h1>

<hr />
<div class="row d-flex justify-content-center ">
    <div class="col-md-8">
        <form asp-area="Administration" asp-controller="Categories" asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <label for="parentCategory">Parant Category</label>
            <component type="typeof(SelectCategoryComponent)" render-mode="ServerPrerendered" />
            <span asp-validation-for="Name" class="text-danger"></span>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <dl>
                    <dt>
                        <label asp-for="Image"></label>
                    </dt>
                    <dd>
                        <input class="form-control-file" asp-for="Image" type="file">
                    </dd>
                </dl>
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="d-flex justify-content-between">
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
                <div>
                    <a class="btn btn-info" asp-action="All">Back</a>
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
