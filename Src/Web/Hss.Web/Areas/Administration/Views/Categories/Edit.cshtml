@using Hss.Web.ViewModels.Administration.Categories
@model EditCategoryViewModel

<h1>Edit Service Category</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="parentCategory">Parant Category</label>
                <component type="typeof(SelectCategoryComponent)" render-mode="ServerPrerendered" param-CategoryToEdit="@Model.Id" />
            </div>
            <img src="@Model.ImageUrl"/>
            <div class="form-group">
                <dl>
                    <dt>
                        <label asp-for="ImageUrl"></label>
                    </dt>
                    <dd>
                        <input asp-for="ImageUrl" type="file">
                    </dd>
                </dl>
            </div>
            <div class="d-flex justify-content-between">
                <div class="form-group">
                    <input type="submit" value="Edit" class="btn btn-primary" />
                </div>
                <div>
                    <a class="btn btn-info" asp-action="All">Back</a>
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
